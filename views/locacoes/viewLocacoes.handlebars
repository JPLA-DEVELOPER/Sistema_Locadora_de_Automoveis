{{> header}}

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

<div class="container-fluid">
  <div class="row">
    <div class="col-2" >
      {{> menuLateral}}
    </div>
    
    <div class="col-10" style="font-size:small">
      <br>
      <h2>Todas as Locações</h2>
      <table class="table table-striped table-bordered" style="background-color: #F5F8FF;">
        <thead>
          <tr>
            <th class="text-center" scope="col">ID Locação</th>
            <th class="text-center" scope="col">Cliente</th>
            <th class="text-center" scope="col">CPF</th>
            <th class="text-center" scope="col">Placa</th>
            <th class="text-center" scope="col">Marca</th>
            <th class="text-center" scope="col">Modelo</th>
            <th class="text-center" scope="col">Cor</th>
            <th class="text-center" scope="col">Renavam</th>
            <th class="text-center" scope="col">Data Inicio</th>
            <th class="text-center" scope="col">Data Fim</th>
            <th class="text-center" scope="col">Valor Diária</th>
            <th class="text-center" scope="col">Valor Total</th>
            <th class="text-center" scope="col">Ações</th>
          </tr>
        </thead>

        <tbody>
          {{#each locacao}}
            <tr>
              <th class="text-center" scope="row">{{this.idLocacao}}</th>
              <td class="text-center">{{this.nome}}</td>
              <td class="text-center">{{this.cpf}}</td>
              <td class="text-center">{{this.placa}}</td>
              <td class="text-center">{{this.marca}}</td>
              <td class="text-center">{{this.modelo}}</td>
              <td class="text-center">{{this.cor}}</td>
              <td class="text-center">{{this.renavam}}</td>
              <td class="text-center">{{moment this.dataInicio 'DD/MM/YYYY'}}</td>
              <td class="text-center">{{moment this.dataFim 'DD/MM/YYYY'}}</td>
              <td class="text-center">{{this.valorDiaria}}</td>
              <td class="text-center">{{this.valorTotal}}</td>
            

              <td>
                <div class="d-grid gap-2 d-md-flex justify-content-center">
                  <a href="/detalhes/locacao/{{this.idLocacao}}"><button type="button" class="btn btn-outline-info btn-sm"><i class="bi bi-border-width"></i>Detalhes</button></a>
                  <a href="/editar/locacao/{{this.idLocacao}}"><button type="button" class="btn btn-outline-info btn-sm"><i class="bi bi-pen-fill"></i>Editar</button></a>
                  <a href="/excluir/locacao/{{this.idLocacao}}"><button type="button" class="btn btn-outline-danger btn-sm"><i class="bi bi-person-dash"></i>Deletar</button></a>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <a class="btn btn-primary" href="/cadastro/locacao" role="button"><i class="bi bi-basket2-fill"></i> Nova</a>
    </div>
  </div>
</div>
