<!-- metodo GET e SET são responsaveis por enviar os dados do formulávio para o bachend-->
<!-- metodo GET: envia esses dados pela url, o POST não-->
 
<div>
  <div class="row">
    <div class="col-2">
      {{> menuLateral}}
    </div>
    
    <div class="col-10 container w-50 justify-content-center">
      <h2>Editar Veículo</h2>
      <br>
      <form name="formularioeditar" action="/editar/veiculo/{{veiculo.idVeiculo}}" method="post">
      <div>
          <div>
            <label class="form-label">Marca:</label>
            <input class="form-control" type="text" name="marca"  value="{{ veiculo.marca }}">
          </div>

          <div>
            <label class="form-label">Modelo:</label>
            <input class="form-control" type="text" name="modelo" value="{{ veiculo.modelo }}">
          </div>

          <div>
            <label class="form-label">Ano:</label>
            <input class="form-control" type="text" name="ano" value="{{ veiculo.ano }}">
          </div>  

          <div>
            <label class="form-label">Cor:</label>
            <input class="form-control" type="text" name="cor" value="{{ veiculo.cor }}">
          </div>
          <div>
            <label class="form-label">Valor Diária:</label>
            <input class="form-control" type="text" name="valordiaria" value="{{ veiculo.valordiaria }}">
          </div>
          <br>
        
          <div>
            <button class="btn-salvar btn btn-primary">Salvar</button>
            <a href="/view/veiculos"><button type="button" class="btn btn-secondary">Cancelar</button></a>
          </div>

        </div>
      </form>
     </div>
  </div>
</div>